<nav>
<div id="nav">
<h1>Burger Madness!</h1>
</div>
</nav>

<div id="main">
<div id="eat"><h2>Burgers that are ready to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{burger_name}}
      <button class="change-devour" data-id="{{id}}" data-newdevour="1">
		{{devour}}Devour!
	</button>
    </p>
    {{/unless}}
    
 {{/each}}
</ul>
</div>

<div id="pic">
    <img src="/css/download.jpg" alt="Burger Pic"/>
</div>


<div id="ate">
<h2>Burgers already devoured!</h2>

<ul>
  {{#each burgers}}
   {{#if devoured}}
      <p>{{burger_name}}</p>
    {{/if}}
   
  {{/each}}
</ul>
</div>
</div>

<div id="add">
<h2 id="addBurger">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Add your favorite Burger here:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>




